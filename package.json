{
  "name": "funky-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Funky Monorepo - React Component Library and Tools",
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "dev": "pnpm -r dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "docs:dev": "ladle serve",
    "docs:build": "ladle build",
    "docs:preview": "ladle preview",
    "ui:lint": "pnpm --filter @funky/ui lint",
    "ui:dev": "pnpm --filter @funky/ui dev",
    "ui:test": "pnpm --filter @funky/ui test",
    "why": "pnpm why",
    "dep-graph": "madge --image dependency-graph.svg --extensions ts,tsx,js,jsx packages/",
    "dep-tree": "madge --tree --extensions ts,tsx,js,jsx packages/"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "icons",
    "utils",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@funky/config": "workspace:*",
    "@changesets/cli": "^2.27.1",
    "@ladle/react": "^4.0.2",
    "@rsbuild/core": "^1.1.1",
    "@rsbuild/plugin-react": "^1.1.1",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "madge": "^6.1.0"
  }
} 